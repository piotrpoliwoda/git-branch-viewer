{
  "name": "branchey",
  "productName": "Branchey",
  "version": "1.0.4",
  "description": "A tool to keep your git branches clean",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "test": "npm run lint",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "cross-env NODE_ENV=production node scripts/upgradePatchVersion.js && electron-forge make && open ./out/make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "icon": "makeicns -in ./src/assets/git-branch-viewer-launcher.png -out ./src/assets/git-branch-viewer-launcher.icns",
    "prepare": "husky"
  },
  "keywords": [],
  "author": {
    "name": "Peter Poliwoda",
    "email": "contact@peterpoliwoda.me"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-dmg": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/plugin-webpack": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "electron": "35.2.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "node-loader": "^2.1.0",
    "prettier": "^3.5.3",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "build": {
    "appId": "me.peterpoliwoda.git-branch-viewer",
    "publish": [
      {
        "provider": "github",
        "owner": "piotrpoliwoda",
        "repo": "git-branch-viewer"
      }
    ]
  }
}
